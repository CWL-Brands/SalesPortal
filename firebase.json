{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 9090
    },
    "storage": {
      "host": "localhost", 
      "port": 9191
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "docs/**",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/dialer.html",
        "destination": "/dialer.html"
      },
      {
        "source": "/standalone-dialer.html",
        "destination": "/standalone-dialer.html"
      },
      {
        "source": "/copper-dialer.html",
        "destination": "/standalone-dialer.html"
      },
      {
        "source": "/dialer-service-worker.js",
        "destination": "/dialer-service-worker.js"
      },
      {
        "source": "/oauth-popup-handler.js",
        "destination": "/oauth-popup-handler.js"
      },
      {
        "source": "/redirect.html",
        "destination": "/redirect.html"
      },
      {
        "source": "/api/shipstation/webhook",
        "function": "shipstationWebhook"
      },
      {
        "source": "/rc/auth/start",
        "function": "ringcentralAuthStart"
      },
      {
        "source": "/rc/auth/callback",
        "function": "ringcentralAuthCallback"
      },
      {
        "source": "/rc/notes",
        "function": "ringcentralNotes"
      },
      {
        "source": "/rc/status",
        "function": "ringcentralStatus"
      },
      {
        "source": "/rc/token",
        "function": "ringcentralToken"
      },
      {
        "source": "/rc/webhook",
        "function": "ringcentralWebhook"
      },
      {
        "source": "/rc/ringsense",
        "function": "ringcentralRingSense"
      },
      {
        "source": "/rc/sync",
        "function": "rcSync"
      },
      {
        "source": "/rc/copper/lookup",
        "function": "copperLookup"
      },
      {
        "source": "/rc/copper/log-call",
        "function": "copperLogCall"
      },
      {
        "source": "/rc/copper/add-summary",
        "function": "copperAddSummary"
      },
      {
        "source": "/rc/ai/summary",
        "function": "aiSummary"
      },
      {
        "source": "/api/config",
        "function": "loadConfigurations"
      },
      {
        "source": "/api/shipstation/**",
        "function": "shipstationApi"
      },
      {
        "source": "/rc",
        "destination": "/standalone-dialer.html"
      },
      {
        "source": "/copper-dialer.html",
        "destination": "/standalone-dialer.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/*.@(json|html)",
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
