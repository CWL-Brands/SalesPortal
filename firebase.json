{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 9090
    },
    "storage": {
      "host": "localhost", 
      "port": 9191
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    }
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "docs/**",
      "*.md"
    ],
    "rewrites": [
      { "source": "/api/shipstation/webhook", "function": "shipstationWebhook" },
      { "source": "/api/shipstation/**", "function": "shipstationApi" },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(json|html)",
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
