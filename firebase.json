{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 9090
    },
    "storage": {
      "host": "localhost", 
      "port": 9191
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    }
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "docs/**",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/api/shipstation/webhook",
        "run": {
          "serviceId": "shipstationwebhook",
          "region": "us-central1",
          "serviceAccountEmail": "hosting-invoker@kanvaportal.iam.gserviceaccount.com"
        }
      },
      {
        "source": "/api/shipstation/**",
        "run": {
          "serviceId": "shipstationapi",
          "region": "us-central1",
          "serviceAccountEmail": "hosting-invoker@kanvaportal.iam.gserviceaccount.com"
        }
      },
      { "source": "/rc/auth/start",    "run": { "serviceId": "ringcentralauthstart",    "region": "us-central1" } },
      { "source": "/rc/auth/callback", "run": { "serviceId": "ringcentralauthcallback", "region": "us-central1" } },
      { "source": "/rc/notes",         "run": { "serviceId": "ringcentralnotes",        "region": "us-central1" } },
      { "source": "/rc/status",        "run": { "serviceId": "ringcentralstatus",       "region": "us-central1" } },
      { "source": "/rc/sync",          "run": { "serviceId": "ringcentralsynccopper",   "region": "us-central1" } },
      { "source": "/rc/webhook",       "run": { "serviceId": "ringcentralwebhook",      "region": "us-central1" } },
      { "source": "/rc/ringsense",     "run": { "serviceId": "ringcentralringsense",    "region": "us-central1" } },
      { "source": "/rc",               "destination": "/rc-widget.html" },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ]
      },
      {
        "source": "**/*.@(json|html)",
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
