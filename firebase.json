{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 9090
    },
    "storage": {
      "host": "localhost", 
      "port": 9191
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    }
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "docs/**",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/api/shipstation/webhook",
        "run": {
          "serviceId": "shipstationwebhook",
          "region": "us-central1",
          "serviceAccountEmail": "hosting-invoker@kanvaportal.iam.gserviceaccount.com"
        }
      },
      {
        "source": "/api/shipstation/**",
        "run": {
          "serviceId": "shipstationapi",
          "region": "us-central1",
          "serviceAccountEmail": "hosting-invoker@kanvaportal.iam.gserviceaccount.com"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(json|html)",
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
